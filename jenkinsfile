pipeline {
    agent any

    environment {
        SONARQUBE_SERVER = 'SonarQube' // Le nom que tu as donné à ton serveur SonarQube dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/gabriel25115CG/HeartSenseAI.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }

        stage('SonarQube Scan') {
            steps {
                script {
                    // Exécute le scan avec SonarQube
                    withSonarQubeEnv('SonarQube') {
                        sh 'mvn clean install sonar:sonar'
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 1, unit: 'HOURS') {
                        waitForQualityGate()
                    }
                }
            }
        }
    }
}
