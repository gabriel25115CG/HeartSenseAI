pipeline {
    agent any

    environment {
        SONARQUBE_SERVER = 'SonarQube' // Assure-toi d'avoir configuré un serveur SonarQube dans Jenkins
        SONARQUBE_TOKEN = credentials('sonar-token') // Si tu utilises un token pour l'authentification
    }

    stages {
        stage('Checkout') {
            steps {
                // Récupérer le code depuis GitHub
                git 'https://github.com/gabriel25115CG/HeartSenseAI.git'
            }
        }

        stage('Build') {
            steps {
                // Ajouter ici les étapes de build (si nécessaire)
                echo 'Building the project...'
            }
        }

        stage('SonarQube Scan') {
            steps {
                script {
                    // Scanner le code avec SonarQube (si tu utilises SonarQube)
                    withSonarQubeEnv('SonarQube') {
                        sh 'mvn clean install sonar:sonar'
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                // Vérifier la qualité du code via SonarQube (si SonarQube est configuré)
                script {
                    timeout(time: 1, unit: 'HOURS') {
                        waitForQualityGate()
                    }
                }
            }
        }
    }
}
